<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouOweMe" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.YouOweMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YouOweMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.YouOweMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RedButton">
<!--        <item name="backgroundColor">@color/red_delete</item>-->
        <item name="backgroundTint">@color/red_delete</item>
        <item name="android:textColor">?android:attr/colorForegroundInverse</item>
        <item name="iconTint">?android:attr/colorForegroundInverse</item>
        <item name="tint">?android:attr/colorForegroundInverse</item>

    </style>
</resources>